<p id="notice"><%= notice %></p>

<h1>Simple Airbnb</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>description</th>
      <th>price_per_night</th>
      <th>number_of_guests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.name %></td>
        <td><%= flat.address %></td>
        <td><%= flat.description %></td>
        <td><%= flat.price_per_night %></td>
        <td><%= flat.number_of_guests %></td>
        <td><%= link_to 'Show', flat %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New flat', new_flat_path %>
